{% extends 'base.html.twig' %}

{% block title %}Création d'un nouvel album !{% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-3">Créer un nouvel album</h1>
    <div class="row">
        {{ form_start(form) }}
        
        <div class="form-group">
            {{ form_label(form.title) }}
            {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Titre de l\'album'}}) }}
        </div>
        
        <button type="submit" class="btn btn-primary">Créer l'album</button>
        {{ form_end(form) }}

    </div>

</div>
{% endblock %}
