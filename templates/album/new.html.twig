{% extends 'base.html.twig' %}

{% block title %}Création d'un nouvel album !{% endblock %}

{% form_theme form _self %}

{% block body %}
<div class="container">
    <h1 class="my-3">Créer un nouvel album</h1>
    <div class="row">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        
        <button type="submit" class="btn btn-primary">Créer l'album</button>
        {{ form_end(form) }}

    </div>

</div>
{% endblock %}

{% block _album_pictures_widget %}
    <p>Ajouter des photos</p>

    {{ form_widget(form) }}

    <div class="form-group">
        <button type="button" id="add-picture" class="btn btn-primary">Ajouter une photo</button>
    </div>
{% endblock %}

{% block _album_pictures_entry_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block _album_pictures_entry_widget %}
    <div class="form-group">
        <div class="row">
            <div class="col">
                {{ form_widget(form.location) }}
            </div>
            <div class="col">
                {{ form_widget(form.caption) }}
            </div>
        </div>
    </div>
{% endblock %}