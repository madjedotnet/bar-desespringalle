<form method="post" action="{{ path('album_delete', {'slug': album.slug}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ album.slug) }}">
    <button class="btn">Delete</button>
</form>
