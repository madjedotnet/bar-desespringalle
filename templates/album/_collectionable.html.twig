{% block _album_pictures_widget %}
    <p>Ajouter des photos</p>
    
    {{ form_widget(form) }}

    <input type="hidden" id="widgets-counter" value="0">

    <div class="form-group">
        <button type="button" id="add-picture" class="btn btn-primary">Ajouter une photo</button>
    </div>
{% endblock %}

{% block _album_pictures_entry_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block _album_pictures_entry_widget %}
    <div class="form-group col-3" id="block_{{ id }}">
        <div class="card bg-light editable">
            <div class="card-body">
                <div class="row">
                <div class="col-12">

                    <div class="row">
                        <img class="d-block w-100" src="/uploads/{{ form.location.vars.value }}" alt="">
                    </div>
                </div>
                    <button type="button" class="btn btn-danger" data-action="delete" data-target="#block_{{id}}" data-toggle="tooltip" data-placement="top">X</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}