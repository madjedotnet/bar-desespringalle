{% extends 'base.html.twig' %}

{% block title %}
    {{album.title}}
{% endblock %}

{% block body %}

<div class="ad-title" style="">
    <div class="container">
        <h1>{{ album.title }}</h1>
        <p>{{ album.content }} le {{ album.albumDate|date('d-m-Y H:i:s') }}</p>
        par {{ album.creationUser}}
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-8 mb-3">
            {{ album.content }}
        </div>
        <div class="col">
            <div class="row">
                <div class="col-4">
                    <img src="http://placehold.il/64x64" alt="Avatar de {{ album.creationUser }}">
                </div>
                <div class="col">
                    <h3>{{ album.creationUser }}</h3>
                    <span class="badge badge-primary"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                {% for picture in album.pictures %}
                <div class="carousel-item {% if loop.first %}active{% endif %}">
                    <img class="d-block w-100" src="{{ picture.location }}" alt="">
                </div>
                {% endfor %}
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
{% endblock %}