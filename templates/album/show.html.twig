{% extends 'base.html.twig' %}

{% block title %}
    {{album.title}}
{% endblock %}

{% block body %}

<div class="ad-title" style="">
    <div class="container">
        <h1>{{ album.title }}</h1>
        <p>{{ album.content }} le {{ album.albumDate|date('d-m-Y H:i:s') }}</p>
        par 
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-8 mb-3">
            {{ album.content }}
        </div>
        <div class="col">
            {% set a = album.author %}
            <div class="row mb-3 align-items-center">
                <div class="col-3">
                    <img src="{{a.picture}}" class="avatar avatar-medium" alt="Avatar de {{a.firstname}}">
                </div>
                <div class="col">
                    <h3>{{a.fullName}}</h3>
                    <span class="badge badge-primary">{{a.albums | length}} annonces</span>
                </div>
            </div>
            <p>{{a.description | raw}}</p>
        </div>
    </div>
    <div class="row">
        {% for picture in album.pictures %}
            <div class="col-md-3">
                    <img class="d-block w-100 mb-3" src="{{ picture.location }}" alt="">
            </div>  
        {% endfor %}
    </div>
</div>
{% endblock %}