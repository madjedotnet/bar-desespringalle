{%  extends 'admin/base.html.twig' %}

{% block title %}Modification de l'album {{album.id}}{% endblock %}

{% form_theme form _self %}

{% block body %}
<div class="container">
<h1 class="my-5">Modification de l'album "{{album.title}}"</h1>

    {{ form_start(form) }}

    <div class="row">
        <div class="col">
            <div class="card bg-light">
                <div class="card-header">
                    <h4 class="card-title">Modifier l'album ?</h4>
                </div>
                <div class="card-body">
                    {{ form_widget(form) }}

                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-check"></i>
                        Enregister les modifications
                    </button>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card bg-light">
                <div class="card-header">
                    <h4 class="card-title">Les commentaires</h4>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Auteur</th>
                                <th>Date</th>
                                <th>Commentaire</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for comment in album.comments %}
                                <tr>
                                    <td>{{comment.id}}</td>
                                    <td>{{comment.author.firstname}}</td>
                                    <td>{{comment.createdAt | date('d-m-Y H:i:s') }}</td>
                                    <td>{{comment.content}}</td>
                                    <td>
                                        <a href="#" class="btn btn-primary">
                                            <i class="fas fa-pen"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>

    {{ form_end(form) }}

</div>
{% endblock %}

{% block _album_pictures_widget %}
    {{ form_widget(form) }}
{% endblock %}


{% block _album_pictures_entry_row %}
    <div id="block_{{id}}">
        {{ form_widget(form) }}
    </div>
{% endblock %}


{% block _album_pictures_entry_widget %}
    <div class="row align-items-center mb-3">
        <div class="col-4">
            {% if value %}
                <img src="{{value.location}}" class="img-fluid" alt="">
            {% endif %}
        </div>
        <div class="col-6">
            {{ form_row(form.caption) }}
        </div>
        <div class="col">
            <button type="button" class="btn btn-danger" data-action="delete" data-target="#block_{{id}}">
                <i class="fas fa-trash"></i>
            </button>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function() {
            $('[data-action="delete"]').on('click', function() {
                const target = this.dataset.target;
                $(target).remove();
            });
        });
    </script>
{% endblock %}