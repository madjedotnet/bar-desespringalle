{% extends 'admin/base.html.twig' %}

{% block title %}Modification d'un commentaire !{% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-5">Modification du commentaire {{comment.id}} !</h1>

    <div class="alert alert-info">
        <strong>Album li√© : </strong> {{comment.album.title}}<br>
        <strong>Auteur : </strong> {{comment.author.firstname}}<br>
        <strong>Date : </strong> {{comment.createdAt|date('d/m/Y H:i')}}<br>
    </div>

    {{ form_start(form)}}

    {{ form_widget(form)}}

    <button type="submit" class="btn btn-primary">
        <i class="fas fa-check"></i>
        Enregistrer !
    </button>

    {{ form_end(form)}}

</div>
{% endblock %}
